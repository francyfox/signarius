---
import BaseLayout from '@app/layouts/base-layout.astro';
import SgnPost    from 'src/components/post/sgn-post.vue'
const { slug } = Astro.params;

const pageTitle = slug.charAt(0).toUpperCase() + slug.slice(1).replaceAll('-', ' ')
---

<BaseLayout title={pageTitle}>
    <div class="text-6xl font-light mb-8">
        <h1>{pageTitle}</h1>
    </div>
    <SgnPost slug={slug} client:idle/>
</BaseLayout>